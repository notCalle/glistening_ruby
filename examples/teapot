#!/usr/bin/env ruby
# frozen_string_literal: true

require 'bundler/setup'
require 'pry'
require 'glistening_ruby/dsl'
require stdlib 'colors'

require_relative 'include/utah_teapot'

material :shiny_tiles do
  pattern.checkers do
    color grey 0.5
    color grey 0.75
    scale 1/8r
  end
  ambient 0.3
  diffuse 0.7
  phong 0.9, 50
  reflective 0.2
end

scene.pry do
  light.spherical { translate -1.5, 2.5, -1.5; falloff 0.1 }
  light.parallel { rotate x: 1/9r; color grey 0.5 }

  shape.cube do
    shadows false
    material :shiny_tiles
    translate 0, 1, 0
    scale 2
  end

  shape :utah_teapot

  camera do
    canvas 320, 256, 1/6r
    position -0.5, 1.2, -1.6
    look_at 0, 0.4, 0
  end
end
